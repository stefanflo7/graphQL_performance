    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.10.3",
    "apollo-server-express": "^2.21.1",
    "artillery": "^1.6.1",
    "bcrypt": "^5.0.1",
    "class-validator": "^0.13.1",
    "concurrently": "^6.0.0",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "graphql": "^15.5.0",
    "graphql-playground-middleware-express": "^1.7.22",
    "jsonwebtoken": "^8.5.1",
    "migrate-mongo": "^8.2.2",
    "mongoose": "5.10.18",
    "nodemon": "^2.0.7",
    "pm2": "^4.5.5",
    "random-sentence": "^1.0.4",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1",
    "type-graphql-dataloader": "^0.5.0",
    "typeorm": "^0.3.7",
